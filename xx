#!/bin/bash
#open app project
#< xx $1 $2 >
#[code idea | (x-app)]

set +e

case $1 in

  code)
    test -f $2 && code $2 ||
    test -f package.json && code . ||
    code .
  ;;

  charm)
    test -f $2/pyenv.cfg && charm $2 ||
    test -f pyenv.cfg && open charm . ||
    charm .
  ;;

  idea)
    test -f $2/$2.iml && idea $2 ||
    test -f $2.iml && idea . ||
    idea .
  ;;

  *)
    echo -e '[ xx <app> <project> ]'
  ;;

esac
